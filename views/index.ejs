<html>
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="initial-scale=1,maximum-scale=1,user-scalable=no"
    />
    <title>
      GIS
    </title>
    <link
      rel="stylesheet"
      href="https://js.arcgis.com/4.23/esri/themes/light/main.css"
    />
    <link rel="stylesheet" href="stylesheets/style.css">

    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.19.2/axios.min.js"
    ></script>
    
    <script src="javascripts/main.js" type="module"></script>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    
    <script> 
      function closeButton(){
        let sidebar = document.getElementById("sidebar");
        sidebar.style.transform = "translateX(-100%)";
      }

      function openButton(){
        let sidebar = document.getElementById("sidebar");
        sidebar.style.transform = "translateX(0%)";
      }

      function inputYear(){
        if(document.getElementById('F').selected == true || document.getElementById('A').selected == true ){
          let year = document.getElementById("yearInput")
          year.style.display = "flex"
        }else{
          let year = document.getElementById("yearInput")
          year.style.display = "none"
        }
      }
    </script>
  </head>

  <body>
    <div id="viewDiv">
      <button class="forward" onclick="openButton()"><img src="images/forward.svg" alt=""></button>
      <div id="sidebar" class="side d-flex flex-column flex-shrink-0 p-3 text-white bg-dark" style="width: 280px;">
        <div class="side_head">
          <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
            <span class="fs-4">AirPollution</span>
          </a>
          <button onclick="closeButton()" type="button" class="btn-close" aria-label="Close" > </button>

        </div>
        <hr>
        <ul class="nav nav-pills flex-column mb-auto">
          <li class="nav-item">
            <a href="#" class="nav-link active" aria-current="page">
              <svg class="bi me-2" width="16" height="16"><use xlink:href="#home"/></svg>
              GIS Aplication
            </a>
          </li>
          <li>
            <a href="/upload" class="nav-link text-white">
              <svg class="bi me-2" width="16" height="16"><use xlink:href="#speedometer2"/></svg>
              Upload CSV
            </a>
          </li>
          <li>
            <a href="/download" class="nav-link text-white">
              <svg class="bi me-2" width="16" height="16"><use xlink:href="#table"/></svg>
              Dowload CSV
            </a>
          </li>
        </ul>
      </div>

      <div class="input">

        <form action="" >
          <label for="">Option</label>
          <select id="select" class="form-select" aria-label="Disabled select example" name="option" onchange="inputYear()">
            <option value="" selected></option>
            <option value="A" id="A"> A</option>
            <option value="B" >B</option>
            <option value="C" >C</option>
            <option value="D" >D</option>
            <option value="E" >E</option>
            <option value="F" id="F">F</option>
            <div id="yearInput" style="display: none; margin-top: 10px;"> 
            </div>
            <input placeholder="Year" type="text" id="yearInput" style="display: none; margin-top: 10px;" name="year" class="form-control"  />
          </select>
          <br>

          <input type="submit" value="search" class="btn btn-success">
        </form>
      </div>
    </div>
  </body>
</html>